                                 , ⊢pλ {N = N₂} {Γ = Γ₂} {e = e₂} {γ = γ₂} {p = px†₂} {p′ = p†₂} {Σ = Σ₂} H₂₁ H₂₂ H₂₃ H₂₄ H₂₅
                                 ː s ⟧ =
